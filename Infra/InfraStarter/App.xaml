<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:InfraStarter"
             xmlns:rdn="clr-namespace:InfraStarter.Resources.DisplayNames"
             x:Class="InfraStarter.App"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary>
                    <rdn:ResourceDisplayNameConverter x:Key="ResourceDisplayNameConverter" />
                </ResourceDictionary>
                <ResourceDictionary>
                    <toolkit:IsListNotNullOrEmptyConverter x:Key="IsListNotNullOrEmptyConverter"/>
                    <toolkit:DateTimeOffsetConverter x:Key="DateTimeOffsetConverter" />
                    <toolkit:IsNullConverter x:Key="IsNullConverter" />
                    <toolkit:IsNotNullConverter x:Key="IsNotNullConverter" />
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
